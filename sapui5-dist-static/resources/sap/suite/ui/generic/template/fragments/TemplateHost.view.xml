<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" height="100%"
	controllerName="sap.suite.ui.generic.template.lib.TemplateHost" xmlns:html="http://www.w3.org/1999/xhtml">
	<html:style>
		.sapFePlaceholderContainerWrapper{
            background-color: @sapUiBaseColor;
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 100;
        }
	</html:style>
	<NavContainer id="placeholderHost" visible="{path: '_templPrivGlobal>/generic/placeholdersShown', formatter: '.isPlaceholderShown'}" class="sapFePlaceholderContainerWrapper" />
	<core:ComponentContainer id="host" height="100%" propagateModel="true" />
</mvc:View>